{
  "scopeName": "source.mel",
  "name": "MelScript",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#constants"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#operators"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.mel",
          "match": "//.*$"
        },
        {
          "name": "comment.block.mel",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.mel",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.mel",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.mel",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.mel",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.template.mel",
          "begin": "`",
          "end": "`",
          "patterns": [
            {
              "name": "constant.character.escape.mel",
              "match": "\\\\."
            },
            {
              "name": "entity.name.tag.mel",
              "match": "\\$\\{[^}]+\\}"
            }
          ]
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.mel",
          "match": "\\b(if|else|while|for|return|break|continue|fun|var|val|async|await|try|catch|throw|new|class|extends|super|this|import|export|from)\\b"
        },
        {
          "name": "storage.type.mel",
          "match": "\\b(var|val|fun|class|null|undefined|true|false)\\b"
        },
        {
          "name": "support.function.mel",
          "match": "\\b(print|println|input|fetch|require)\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.numeric.mel",
          "match": "\\b\\d+(\\.\\d+)?\\b"
        },
        {
          "name": "constant.language.mel",
          "match": "\\b(true|false|null|undefined|NaN)\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.mel",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*(?=\\()"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.mel",
          "match": "\\+|\\-|\\*|\\/|%|\\=|\\=\\=|\\!\\=|\\<|\\>|\\<\\=|\\>\\=|\\&\\&|\\|\\||\\!"
        }
      ]
    }
  }
}
