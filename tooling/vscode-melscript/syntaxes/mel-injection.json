{
  "scopeName": "melscript.injection",
  "injectionSelector": "L:text.html.basic",
  "patterns": [
    {
      "begin": "(<)(mel)(?:\\s+[^>]*)?(>)",
      "beginCaptures": {
        "1": { "name": "punctuation.definition.tag.begin.html" },
        "2": { "name": "entity.name.tag.html" },
        "3": { "name": "punctuation.definition.tag.end.html" }
      },
      "end": "(</)(mel)(>)",
      "endCaptures": {
        "1": { "name": "punctuation.definition.tag.begin.html" },
        "2": { "name": "entity.name.tag.html" },
        "3": { "name": "punctuation.definition.tag.end.html" }
      },
      "contentName": "source.mel",
      "patterns": [
        {
          "include": "source.mel"
        }
      ]
    }
  ]
}
