{
  "name": "melscript-support",
  "displayName": "MelScript Support",
  "description": "Official MelScript syntax highlighting for HTML files.",
  "version": "1.0.1",
  "publisher": "ON00dev",
  "icon": "image.png",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/melscript-org/MelScript"
  },
  "keywords": [
    "melscript",
    "mel",
    "html",
    "syntax",
    "highlighting"
  ],
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "melscript",
        "aliases": ["MelScript", "mel"],
        "extensions": [".mel"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "melscript",
        "scopeName": "source.mel",
        "path": "./syntaxes/mel.json"
      },
      {
        "scopeName": "melscript.injection",
        "path": "./syntaxes/mel-injection.json",
        "injectTo": ["text.html.basic"]
      }
    ]
  }
}
