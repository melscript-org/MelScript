{
  "name": "melscript-support",
  "displayName": "MelScript Support",
  "description": "Official MelScript syntax highlighting for HTML files.",
  "version": "1.0.3",
  "publisher": "ON00dev",
  "icon": "image.png",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/melscript-org/MelScript"
  },
  "keywords": [
    "melscript",
    "mel",
    "html",
    "syntax",
    "highlighting"
  ],
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./extension.js",
  "activationEvents": [
    "onLanguage:melscript",
    "onCommand:melscript.run"
  ],
  "contributes": {
    "commands": [
      {
        "command": "melscript.run",
        "title": "Run MelScript",
        "category": "MelScript",
        "icon": "$(play)"
      }
    ],
    "menus": {
      "editor/title/run": [
        {
          "command": "melscript.run",
          "when": "resourceLangId == melscript",
          "group": "navigation"
        }
      ]
    },
    "languages": [
      {
        "id": "melscript",
        "aliases": ["MelScript", "mel"],
        "extensions": [".mel"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "melscript",
        "scopeName": "source.mel",
        "path": "./syntaxes/mel.json"
      },
      {
        "scopeName": "melscript.injection",
        "path": "./syntaxes/mel-injection.json",
        "injectTo": ["text.html", "text.html.basic", "text.html.derivative"]
      }
    ]
  }
}
