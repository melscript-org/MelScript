{
  "name": "melscript",
  "version": "1.0.0",
  "description": "MelScript Language Interpreter",
  "main": "dist/melscript.js",
  "bin": {
    "mel": "./bin/mel.js"
  },
  "unpkg": "dist/melscript.js",
  "jsdelivr": "dist/melscript.js",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "start": "npx serve .",
    "build": "node scripts/build.js && node scripts/build-node.js",
    "build:node": "node scripts/build-node.js",
    "build:exe": "pkg bin/mel-pkg.js --targets node18-win-x64 --output dist/mel.exe",
    "build:setup": "powershell -File scripts/build-installer.ps1",
    "prepublishOnly": "npm run build",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write \"src/**/*.js\""
  },
  "keywords": [
    "interpreter",
    "language",
    "javascript"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "eslint": "^8.57.0",
    "pkg": "^5.8.1",
    "prettier": "^3.2.5",
    "serve": "^14.2.1"
  }
}
